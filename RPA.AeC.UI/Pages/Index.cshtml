@page
@model IndexModel
@{
    ViewData["Title"] = "Avaliação RPA - AeC";
}

<div class="text-center">
    <h1 class="display-4">Pesquisa no Site da AeC</h1>
    <h1 class="display-6">Robot Automation Process</h1>
